<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMonitorActivity">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:onClick="back"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="&lt;返回" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin1">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:onClick="scan"
            android:text="扫描"
            app:cornerRadius='8dp' />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_below="@+id/lin2">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <!-- 悬浮按钮 -->
    <Button
        android:id="@+id/floating_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#444444"
        android:elevation="4dp"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
    <!-- 弹层背景 -->
    <LinearLayout
        android:id="@+id/overlay_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:orientation="vertical"
        android:visibility="gone" />

    <!-- 弹层按钮容器 -->
    <LinearLayout
        android:id="@+id/additional_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/floating_button"
        android:layout_alignEnd="@id/floating_button"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/to_update"
            android:text="更新应用"
            app:icon="@android:drawable/ic_popup_sync"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:gravity="start|center_vertical"
            android:textColor="#333333"
            android:textSize="15sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:iconSize="20dp"
            app:iconPadding="12dp"
            app:iconTint="#555555"
            app:rippleColor="#D9D9D9"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="12dp"
            android:background="#EEEEEE" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/to_permission_check"
            app:icon="@android:drawable/ic_menu_search"
            android:text="授权检查"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:gravity="start|center_vertical"
            android:textColor="#333333"
            android:textSize="15sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:iconSize="20dp"
            app:iconPadding="12dp"
            app:iconTint="#555555"
            app:rippleColor="#D9D9D9" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="12dp"
            android:background="#EEEEEE" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/to_about"
            android:text="应用信息"
            app:icon="@drawable/ellipsis_horizontal_circle"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:gravity="start|center_vertical"
            android:textColor="#333333"
            android:textSize="15sp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:iconSize="20dp"
            app:iconPadding="12dp"
            app:iconTint="#555555"
            app:rippleColor="#D9D9D9"
            />
    </LinearLayout>

</RelativeLayout>